  <!-- Filter Script -->
  <script>
    function filterTools(category) {
      document.querySelectorAll('.tool').forEach(tool => {
        tool.style.display = (category === 'All' || tool.dataset.category === category) ? 'block' : 'none';
      });
    }
  </script>
